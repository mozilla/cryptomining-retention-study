{
  "manifest_version": 2,
  "name": "Cryptomining Protections Retention Study",
  "version": "1.1",
  "description": "A study that examines the impact of turning on cryptomining protections.",
  "hidden": true,
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "cryptomining-retention-study@shield.mozilla.org",
      "strict_min_version": "66.0"
    }
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking"
  ],

  "experiment_apis": {
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    },
    "multipreffer": {
      "schema": "./privileged/multipreffer/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/multipreffer/api.js",
        "paths": [["multipreffer"]]
      }
    },
    "prefHelper": {
      "schema": "./privileged/prefHelper/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/prefHelper/api.js",
        "paths": [["prefHelper"]]
      }
    }
  }
}
